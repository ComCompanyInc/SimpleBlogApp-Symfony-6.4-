<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
    <link rel="stylesheet" href="css/registration/registration.css">
</head>
<body>
<h3>Форма регистрации</h3>
<input type="text" id="username" placeholder="Имя пользователя" style="display:block;margin:5px;">
<input type="text" id="login" placeholder="Логин" style="display:block;margin:5px;">
<input type="password" id="password" placeholder="Пароль" style="display:block;margin:5px;">
<button id="registerBtn" style="margin:5px;">Зарегистрироваться</button>
<div id="result"></div>
<a href="/login" style="margin:5px;display:block;">Войти в аккаунт</a>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const registerBtn = document.getElementById('registerBtn');
        const usernameInput = document.getElementById('username');
        const loginInput = document.getElementById('login');
        const passwordInput = document.getElementById('password');
        const resultDiv = document.getElementById('result');

        registerBtn.addEventListener('click', function() {
            const userData = {
                username: usernameInput.value,
                login: loginInput.value,
                password: passwordInput.value
            };

            fetch('/signIn', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(userData)
            })
                .then(response => response.json())
                .then(data => {
                    resultDiv.textContent = data[1] + ' (Код: ' + data[0] + ')';
                })
                .catch(error => {
                    resultDiv.textContent = 'Ошибка при отправке запроса';
                    console.error('Error:', error);
                });
        });
    });
</script>
</body>
</html>